@model IEnumerable<Contracts.ViewModels.Dictionaries.DictionaryIndexViewModel>
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    ViewData["Title"] = "Index";
}


<div class="dropdown">
    <a class="btn btn-secondary dropdown-toggle" href="#" role="button" id="dropdownMenuLink" data-toggle="dropdown"
        aria-haspopup="true" aria-expanded="false">
        @ViewBag.Description
    </a>
    <br><br>

    <a asp-action="Create" class="btn btn-primary" asp-route-type="@ViewBag.Description">Create</a>

    <div class="dropdown-menu" aria-labelledby="dropdownMenuLink">
        @foreach (string name in Enum.GetNames(typeof(Common.DataType)))
        {
            <a asp-action="Index" asp-route-type="@name" class="dropdown-item">@name</a>
        }
        </div>
    </div>
    <br>
    <table class="table">
        <thead>
            <tr>
                <th>
                    <label>Name</label>
                </th>
                <th></th>
                <th></th>
            </tr>
        </thead>
        <tbody>

            @foreach (var item in Model)
        {
            <tr>
                <td>
                    <label>@item.Name</label>
                </td>
                <td>
                    <a asp-action="Edit" class="btn btn-primary" asp-route-id="@item.Id"
                        asp-route-type="@ViewBag.Description">Edit</a>
                </td>
                <td>
                    <a asp-action="Delete" class="btn btn-danger" asp-route-id="@item.Id"
                        asp-route-type="@ViewBag.Description">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>